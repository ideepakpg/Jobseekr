                                    <h3>Join Our Newsletter</h3>
                                    <p>Subscribe to get the latest jobs posted and more</p>
                                    <form id="newsletterForm" action="mail/mail.php" method="get" target="_blank" class="newsletter-inner">
                                        <input id="emailInput" name="EMAIL" placeholder="Your email address" class="common-input"
                                               onfocus="this.placeholder = ''"
                                               onblur="this.placeholder = 'Your email address'" required="" type="email">
                                        <div class="button">
                                            <button id="subscribeButton" class="btn" onclick="subscribe()">Subscribe Now! <span class="dir-part"></span></button>
                                        </div>
                                    </form>
                                </div>
                                <!-- End Single Widget -->

                                <script>
                                    function subscribe() {
                                        const form = document.getElementById("newsletterForm");
                                        const emailInput = document.getElementById("emailInput");

                                        // Check if the form is valid
                                        if (form.checkValidity()) {

                                            // Clear the email input field
                                            emailInput.value = "";

                                            // Refresh the page
                                            location.reload();
                                        } else {
                                            // If the form is not valid, submit the form to display validation messages
                                            form.reportValidity();
                                        }
                                    }
